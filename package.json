    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-select-input": "^6.0.0",
    "react": "^18.3.1",
    "react-devtools-core": "^5.3.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "19.2.9",
    "typescript": "^5.6.3"
