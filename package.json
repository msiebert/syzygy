{
  "name": "syzygy",
  "version": "0.1.0",
  "description": "Comprehensive development orchestration through Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "syzygy": "./dist/index.js"
  },
  "keywords": [
    "orchestration",
    "claude-code",
    "tmux",
    "tdd",
    "spec-driven",
    "development",
    "automation"
  ],
  "author": "Mark Siebert",
  "license": "MIT",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
